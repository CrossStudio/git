<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.durak.GameActivity"
    android:id = "@+id/rlMain" >

    <GridLayout
        android:id="@+id/glTable"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/llButtons"
        android:layout_marginBottom="88dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:columnCount="3"
        android:background="#060">

    </GridLayout>

    <LinearLayout
        android:id="@+id/llCardsOnHand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="#050" >
    </LinearLayout>
	
	<LinearLayout
	    android:id="@+id/llGroupOfCards"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="#050" >
	</LinearLayout>
	
    <RelativeLayout
        android:id="@+id/llButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnEndMove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="End Move" />

        <LinearLayout
            android:id="@+id/llGameParams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvNumOfCardsInDeck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#FFF" />

            <TextView
                android:id="@+id/tvWhoseTurn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#FFF" />

            <ImageView
                android:id="@+id/ivTrumpSuit"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/diamonds" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>