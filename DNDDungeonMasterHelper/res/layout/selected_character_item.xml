<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvSelCharacterName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
	    android:layout_marginBottom="5dp"
        android:layout_weight="0.15"
        android:text="Name"
        android:textSize="10sp" />

	<TextView
	    android:id="@+id/tvSelCharacterClass"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
	    android:layout_marginBottom="5dp"
	    android:layout_weight="0.15"
	    android:text="(Class)"
	    android:textSize="10sp" />
	
	<TextView
	    android:layout_width="0dp"
	    android:layout_weight="0.05"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
	    android:layout_marginBottom="5dp"
	    android:text="HP:"
	    android:textSize="10sp"/>
	<EditText
	    android:id="@+id/etSelCharacterHP"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
	    android:layout_marginBottom="5dp"
	    android:layout_weight="0.1"
	    android:text="0"
	    android:textSize="10sp" />

	<TextView
	    android:layout_width="0dp"
	    android:layout_weight="0.05"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
	    android:layout_marginBottom="5dp"
	    android:text="Init:"
	    android:textSize="10sp"/>
	<EditText
	    android:id="@+id/etSelCharacterInit"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
	    android:layout_marginBottom="5dp"
	    android:layout_weight="0.1"
	    android:text="0"
	    android:textSize="10sp"/>

	<Button 
	    android:id="@+id/btnCopyCharacter"
        android:layout_width="0dp"
        android:layout_weight="0.175"
	    android:layout_height="wrap_content"
	    android:text="Make copy"
	    android:textSize="10dp"
        android:minHeight="20dp"
        android:padding="0dp"
	    android:onClick="copyCharacterClickHandler"/>
	<Button 
	    android:id="@+id/btnRemoveSelCharacter"
        android:layout_width="0dp"
        android:layout_weight="0.175"
	    android:layout_height="wrap_content"
	    android:text="Remove"
	    android:textSize="10dp"
        android:minHeight="20dp"
        android:padding="0dp"
	    android:onClick="removeCharacterClickHandler"/>
</LinearLayout>
